<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.example.katalogwisata.data.user.Tour" />

        <import type="android.view.View" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_185sdp"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/custom_layout_frame_card"
        android:padding="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                imageUrl='@{data.image}'
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_8sdp"
                android:contentDescription="@string/todo18"
                android:scaleType="centerCrop"
                app:iss_corner_radius="25" />


            <TextView
                android:id="@+id/tv_tour_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:ellipsize="end"
                android:hint="@string/name_tour"
                android:maxLines="1"
                android:text='@{data.name}'
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_tour_bottom_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:ellipsize="end"
                android:hint="@string/name_tour"
                android:maxLines="1"
                android:text='@{data.information}'
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:id="@+id/heart_plain"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_245sdp"
                    android:contentDescription="@string/todo21"
                    android:src="@drawable/ic_turned_frame"
                    android:visibility='@{data.like == "true" ? View.GONE : View.VISIBLE}' />

                <ImageView
                    android:id="@+id/heart_read"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_245sdp"
                    android:contentDescription="@string/todo22"
                    android:src="@drawable/ic_turned_black"
                    android:visibility='@{data.like != "true" ? View.GONE : View.VISIBLE}'
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </FrameLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>